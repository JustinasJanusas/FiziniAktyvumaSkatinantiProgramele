<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userRow">
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/rowNumber"
        android:text="10000"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/rowAccountImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/no_profile_picture"
        android:padding="2dp"
        app:shapeAppearance="@style/circular"
        android:clickable="true"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:background="@android:color/transparent"
        android:layout_toRightOf="@+id/rowNumber"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rowAccountImage"
        android:layout_centerVertical="true"
        android:orientation="vertical">
    <TextView
        android:id="@+id/userRowNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        android:textColor="@color/purple_700"

        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TaÅ¡kai:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/userScoreText"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>