<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prisijungimas"
        android:textColor="@color/purple_700"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/loginNameText"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="@color/purple_700"
        android:hint="Prisijungimo vardas"/>
    <EditText
        android:id="@+id/loginPasswordText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="SlaptaÅ¾odis"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="@color/purple_700"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/loginActionButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Prisijungti"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Registruotis"
        android:id="@+id/loginRegistrationButton"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"/>
</LinearLayout>

