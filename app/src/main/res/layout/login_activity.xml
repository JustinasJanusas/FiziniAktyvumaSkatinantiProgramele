<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <ImageView
        android:id="@+id/LogoImage"
        android:layout_marginTop="30dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRISIJUNGIMAS"
        android:textColor="@color/purple_700"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>
    <EditText
        android:id="@+id/loginNameText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="40dp"
        android:paddingLeft="5dp"
        android:hint="Prisijungimo vardas"
        android:background="@drawable/rounded_textview"/>
    <EditText
        android:id="@+id/loginPasswordText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="SlaptaÅ¾odis"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:paddingLeft="5dp"
        android:inputType="textPassword"
        android:background="@drawable/rounded_textview"/>
    <Button
        android:id="@+id/loginActionButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Prisijungti"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Neturi paskyros? Registruokis!"
        android:textColor="#983F3F"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="60dp"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Registruotis"
        android:id="@+id/loginRegistrationButton"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"/>
</LinearLayout>

