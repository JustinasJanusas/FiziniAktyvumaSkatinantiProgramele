<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_left"
        android:background="@android:color/transparent"
        android:layout_margin="10dp"
        android:id="@+id/accountBackButton"
        android:layout_gravity="left"
        android:clickable="true"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/accountImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/no_profile_picture"
        android:padding="2dp"
        app:shapeAppearance="@style/circular"
        android:clickable="true"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/accountNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vardenis Pavardenis"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Atsijungti"
            android:background="@drawable/red_button"
            android:id="@+id/logoutButton"/>
    <Button
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Redaguoti paskyrą"
        android:background="@drawable/red_button"
        android:id="@+id/updateAccoutButton"/>
    <Button
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Keisti slaptažodį"
        android:background="@drawable/red_button"
        android:id="@+id/updatePassButton"/>
    <Button
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Šalinti paskyrą"
        android:background="@drawable/red_button"
        android:id="@+id/deleteAccountButton"
        android:textColor="@android:color/holo_red_light"/>

</LinearLayout>
